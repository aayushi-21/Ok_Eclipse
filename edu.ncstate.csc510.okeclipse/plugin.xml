<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Ok Eclipse"
            id="edu.ncstate.csc510.okeclipse.commands.category">
      </category>
      <command
            name="Ok Eclipse"
            categoryId="edu.ncstate.csc510.okeclipse.commands.category"
            id="edu.ncstate.csc510.okeclipse.commands.okEclipseCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="edu.ncstate.csc510.okeclipse.commands.okEclipseCommand"
            class="edu.ncstate.csc510.okeclipse.handlers.SpeechHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="edu.ncstate.csc510.okeclipse.commands.okEclipseCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M2+Z"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Ok Eclipse"
               mnemonic="M"
               id="edu.ncstate.csc510.okeclipse.menus.sampleMenu">
            <command
                  commandId="edu.ncstate.csc510.okeclipse.commands.okEclipseCommand"
                  mnemonic="S"
                  id="edu.ncstate.csc510.okeclipse.menus.okEclipseCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="edu.ncstate.csc510.okeclipse.toolbars.sampleToolbar">
            <command
                  commandId="edu.ncstate.csc510.okeclipse.commands.okEclipseCommand"
                  icon="icons/sample.png"
                  id="edu.ncstate.csc510.okeclipse.toolbars.okEclipseCommand"
                  label="Listen"
                  tooltip="Listen">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="edu.ncstate.csc510.okeclipse.OkEclipseStartup">
      </startup>
   </extension>

</plugin>
